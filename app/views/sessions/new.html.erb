<% provide(:title, "Login") %>
<%= tag.div class: 'row justify-content-center mx-1' do %>
	<%= tag.h1 "ログイン", class: 'col-auto' %>
<% end %>

<%= tag.div class: 'row justify-content-center mx-1' do %>
	<%= tag.div class: 'col-lg-6' do %>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

			<%= tag.div class: 'form-group mt-2 col-auto' do %>
      	<%= f.label :name, "ユーザ名" %>
      	<%= f.text_field :name, class: 'form-control' %>
			<% end %>

			<%= tag.div class: 'form-group mt-2 col-auto' do %>
      	<%= f.label :password , "パスワード"%>
      	<%= f.password_field :password, class: 'form-control' %>
			<% end %>

			<%= tag.div class: 'form-check mt-3 col-auto' do %>
      	<%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
        <%= f.check_box :remember_me, class: 'form-check-input'%>
			<% end %>

      <%= f.submit "ログイン", class: "btn btn-primary btn-block mt-3 col-auto" %>
    <% end %>
	<% end %>
<% end %>
