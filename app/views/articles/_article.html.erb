<%= link_to article_path(article), class: 'list-group-item list-group-item-action' do %>
	<%= tag.div do %>
		<%= tag.h4 do %>
			<%= article.subject %>
		<% end %>
	<% end %>
	<%= tag.div do %>
		<% article.tag_list.each do |tags| %>
			<%= tag.span class: 'border mx-1 bg-light' do %>
				<%= tags %>
			<% end %>
		<% end %>
	<% end %>
	<%= tag.div do %>
		<%= article.created_at.strftime('%Y/%m/%d') %>
	<% end %>
<% end %>
