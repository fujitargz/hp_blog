<% provide(:title, 'Users') %>
<%= tag.div class: 'row justify-content-center' do %>
	<%= tag.h1 "ユーザ一覧", class: 'col-auto' %>
<% end %>

<%= tag.div class: 'row justify-content-center mx-1 my-1' do %>
	<%= tag.div class: 'col-lg-8' do %>
		<%= link_to "新規ユーザを作成", signup_path, class: 'btn btn-primary' %>
	<% end %>
<% end %>
<%= tag.div class: 'row justify-content-center my-1' do %>
	<%= tag.div class: 'col-lg-8' do %>
		<%= will_paginate %>
		<%= tag.div class: 'list-group mx-1' do %>
  		<%= render @users %>
		<% end %>
		<%= will_paginate %>
	<% end %>
<% end %>
