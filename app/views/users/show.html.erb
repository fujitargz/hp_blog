<% provide(:title, @user.name) %>
<div class="row">
   <section class="user_info">
     <h1>
       <%= @user.name %>
     </h1>
   </section>
	<%= link_to "新規記事を作成", new_article_path %>
	<% if @user.articles.any? %>
		<h3>投稿した記事 (<%= @user.articles.count %>)</h3>
		<ol class="articles">
			<%= render @articles %>
		</ol>
		<%= will_paginate @articles %>
	<% end %>
</div>
