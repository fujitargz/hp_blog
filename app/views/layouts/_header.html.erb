<%= tag.header class: 'navbar navbar-fixed-top navbar-expand-lg bg-primary' do %>
	<%= link_to "こうがく祭HP村通信", root_path, id: "logo", class: "navbar-brand text-light mx-5" %>
	<%= tag.button  "メニュー", class: 'navbar-toggler text-light', type: 'button', data: { toggle: 'collapse', target: '#collapse-items' } %>
	<%= tag.div class: 'collapse navbar-collapse', id: 'collapse-items' do %>
		<%= tag.div class: 'navbar-nav' do %>
			<% if logged_in? %>
				<%= link_to "ログアウト", logout_path, method: :delete, class: 'nav-item nav-link text-light' %>
				<%= link_to "記事一覧", root_path, class: 'nav-item nav-link text-light' %>
				<% if current_user.admin? %>
					<%= link_to "ユーザ一覧", users_path, class: 'nav-item nav-link text-light' %>
					<%= link_to "マイページ", current_user, class: 'nav-item nav-link text-light' %>
				<% end %>
			<% end %>
		<% end %>
	<% end %>
<% end %>
