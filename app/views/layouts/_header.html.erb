<%= tag.nav class: 'navbar bg-primary' do %>
  <%= tag.div class: 'col-10' do %>
	  <%= link_to "開発村通信", root_path, id: "logo", class: "navbar-brand text-light mx-5" %>
  <% end %>
  <%= tag.div id: 'nav-drawer', class: 'col-2' do %>
    <%= tag.input id: 'nav-input', type: 'checkbox', class: 'nav-unshown' %>
    <%= tag.label id: 'nav-open', for: 'nav-input' do %>
      <%= tag.span %>
    <% end %>
    <%= tag.label class: 'nav-unshown', id: 'nav-close', for:'nav-input' %>
    <%= tag.ul id: 'nav-content' do %>
      <% if logged_in? %>
        <%= tag.li do %>
          <%= link_to "ログアウト", logout_path, method: :delete %>
        <% end %>
        <%= tag.li do %>
          <%= link_to "記事一覧", root_path %>
        <% end %>
        <% if current_user.admin? %>
          <%= tag.li do %>
            <%= link_to "ユーザ一覧", users_path %>
          <% end %>
          <%= tag.li do %>
            <%= link_to "マイページ", current_user %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
